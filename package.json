{
  "name": "dxw-playbook",
  "private": true,
  "dependencies": {
    "copy-webpack-plugin": "^6.0.2",
    "css-loader": "^3.5.3",
    "docsify": "^4.5.5",
    "husky": "^4.2.5",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "prettier": "^2.0.5",
    "sass-loader": "^8.0.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "scripts": {
    "build": "webpack -p --mode=production",
    "build:dev": "webpack --mode=development",
    "build:dev:watch": "npm run build:dev -- --watch",
    "lint": "npm run lint:prose && npm run format && npm run lint:shell",
    "lint:fix": "npm run lint:prose && npm run format:fix && npm run lint:shell",
    "lint:prose": "goenv exec vale .",
    "lint:prose:suggestions": "npm run lint:prose -- --minAlertLevel suggestion",
    "lint:shell": "shellcheck script/*",
    "format": "prettier --check '**/*'",
    "format:fix": "prettier --write '**/*'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
